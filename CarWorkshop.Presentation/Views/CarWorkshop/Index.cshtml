@using System.Security.Claims
@model IEnumerable<CarWorkshop.Application.CarWorkshop.CarWorkshopDto>

@{
    ViewData["Title"] = "CarWorkshops";

    var isAuthenticated = User.Identity.IsAuthenticated;

}

<h1>CarWorkshops</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-info">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.PhoneNumber</h6>
                <p class="card-text">@item.Description</p>
                <a class="btn btn-outline-primary" asp-controller="CarWorkshop" asp-action="Details" asp-route-encodedName="@item.EncodedName">Details</a>
                @{
                    if (isAuthenticated && User.Claims.First(t => t.Type == ClaimTypes.NameIdentifier).Value == item.CreatedById)
                    {
                        <a class="btn btn-outline-warning" asp-controller="CarWorkshop" asp-action="Edit" asp-route-encodedName="@item.EncodedName">Edit</a>
                    }

                }
            </div>
        </div>
    }
</div>
